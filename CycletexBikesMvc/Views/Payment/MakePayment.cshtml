@model CycletexBikesMvc.ViewModels.MakePaymentViewModel
@{ViewBag.Title = "MakePayment";}

<br />
<h1>Make Payment</h1>
<br />
<hr />
@Html.Partial("_Notifications")

<div class="container">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @* IsSuccessful should be displayed in the payments overview *@

            @* Date will be set to DateTime.Now in POST action *@

            @*  DebitCard dropdown*@
            <div class="form-group">
                @Html.LabelFor(model => model.DebitCards, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.SelectedDebitCardId, Model.DebitCards, "Select", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DebitCards, "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="form-group">
                @Html.LabelFor(model => model.SelectedDebitCardId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectedDebitCardId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectedDebitCardId, "", new { @class = "text-danger" })
                </div>
            </div>*@

            @* Display total cost here *@
            <div class="form-group">
                @Html.LabelFor(model => model.Total, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        }
    </div>
</div> 
<div>
    @Html.ActionLink("Cancel", "Index") @*complete*@
</div>
