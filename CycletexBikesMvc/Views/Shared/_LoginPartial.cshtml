@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ml-auto small mb-2 mb-md-0" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav ml-auto">
            <li class="nav-item nav-link">
                <!-- Show logged in users username/email -->
                @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
            </li>
            <li class="nav-item nav-link">
                <a class="nav-link btn btn-outline-secondary" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item nav-link">
            <a class="nav-link btn btn-primary" onclick="location.href='@Url.Action("Login", "Account", null)'">Login</a>
        </li>
        <li class="nav-item nav-link">
            <a class="nav-link btn btn-outline-secondary" onclick="location.href='@Url.Action("Register", "Account", null)'">Register</a>
        </li>
    </ul>
}